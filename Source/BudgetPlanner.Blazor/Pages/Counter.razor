@page "/counter"

<PageTitle>Counter</PageTitle>

@using BudgetPlanner.Blazor.Data
@using VilligerElectronics.BudgetPlanner.Core.Budget
@inject BudgetService BudgetService

<h1>Counter</h1>

<button class="btn btn-primary" @onclick="IncrementCount">Add new Budget Position</button>

@code {
    private void IncrementCount()
    {
        BudgetService.StoreBudgetPosition(new BudgetPosition
        {
            DueDate = DateTimeOffset.Now,
            Description = "Test",
            BookingDate = DateTimeOffset.MinValue,
            Tags = new List<string>
            {
                "Income",
                "NoTax"
            }
        });
    }
}
