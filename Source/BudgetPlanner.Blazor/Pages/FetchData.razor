@page "/fetchdata"

<PageTitle>Budget forecast</PageTitle>

@using BudgetPlanner.Blazor.Data
@using VilligerElectronics.BudgetPlanner.Core.Budget
@inject BudgetService BudgetService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Due Date</th>
                <th>Booked Date</th>
                <th>Tags</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Description</td>
                    <td>@forecast.DueDate.ToLocalTime().DateTime.ToShortDateString()</td>
                    <td>@forecast.BookingDate.ToLocalTime().DateTime.ToShortDateString()</td>
                    <td>@forecast.Tags</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<BudgetPosition>? forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await BudgetService.GetAllBudgetPositions();
    }
}
